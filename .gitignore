# Node dependencies
node_modules/

# Next.js build output
.next/
out/
dist/

# Logs
logs
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Environment files (never push secrets)
.env
.env.local
.env.development.local
.env.test.local
.env.production.local

# Editor & OS specific
.vscode/
.idea/
.DS_Store
Thumbs.db

# Temporary files
*.tmp
*.swp
*.swo
*.bak

# Coverage / Testing
coverage/
*.lcov

# Build cache
.cache/
.next/cache/

# Local environment settings
*.local
*.envrc

# Dependency lock files (optional)
# (Keep this tracked if team uses npm for version consistency)
# package-lock.json
# yarn.lock

# Misc
*.pid
*.seed
*.pid.lock

# Output from test or scripts
test-output/

# Vercel or deployment configs (optional)
.vercel/
